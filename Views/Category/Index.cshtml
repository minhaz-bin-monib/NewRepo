@model IEnumerable<Category>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}



    

<div class="container p-3">
    <div class="row pt-4">
        
        <div class="col-6">
            <h2 class="text-primary">Notice List</h2>

        </div>

        <div class="col-6 text-end">

            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> &nbsp Create New Notice    
            </a>

        </div>

    </div>

    <br /> <br />



<table class="table table table-bordered table-stripped" style="width:100%">

    <thead>
         <tr>

            <th>
                Notice Detail
            </th>
            <th>
                Date-Time
            </th>
            <th></th>

         </tr>
        
    </thead>


    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td Width:50%>
                    @obj.name
                </td>

                <td Width:30%>
                    @obj.CreatedDateTime
                </td>

                <td >

                    <div class = "w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>

                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.id" class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                    </div>

                </td>

               
            </tr>
            
        }


    </tbody>

</table>

</div>
